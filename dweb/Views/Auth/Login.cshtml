@{
    ViewData["Title"] = "Login";
}

<div class="flex flex-col justify-center items-center">
    <h1 class="font-bold text-3xl text-black mt-4 ">Login</h1>
    <div class="flex flex-col items-center justify-center min-h-[50vh] bg-gray-100  w-[30vw] text-white mt-16">

        <form>
            <div class="flex flex-col max-w-md p-8 bg-gray-500 rounded-lg h-[25vh] shadow-lg w-[50vw]">
                <div class="flex flex-col mb-4">
                    <label class="mb-2 text-white font-bold text-lg">Email</label>
                    <input name="inputEmail" type="text" class="p-2 rounded text-black font-bold"/>
                </div>

                <div class="flex flex-col mb-4">
                    <label class="mb-2 text-white font-bold text-lg">Password</label>
                    <input name="inputPassword" type="password" class="p-2 rounded text-black focus:border-black"/> 
                </div>
            </div>
            
            <div class="flex justify-center items-center m-4">
                <button type="submit" class="bg-blue-600 rounded shadow-lg text-lg font-bold w-[5vw] hover:bg-blue-800">Login</button>
            </div>
        </form>
        <a class="text-black hover:cursor-pointer" asp-controller="Auth" asp-action="Registo">Ainda não tens conta? Clica aqui!</a>
        
    </div>
</div>



