@using System.IO
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

@{
    ViewData["Title"] = "Pesquisar Filmes";
}

<div class="container-fluid py-5" style="background-color: #f8f9fa;">
    <h2 class="mb-4 text-center">Pesquisar Filmes</h2>

    <div class="row mb-4 justify-content-center">
        <div class="col-md-6 d-flex justify-content-center align-items-center">
            <input type="text" class="form-control me-2" placeholder="Search bar" />
            <button class="btn btn-primary" type="submit">Pesquisar</button>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar dos géneros -->
        <div class="col-md-2">
            <div class="p-3 rounded shadow-sm mb-4" style="background-color: #e0e0e0;">
                <h5>Genres</h5>
                <ul class="list-unstyled ms-2">
                    <li><a href="#">teste</a></li>
                    <li><a href="#">teste</a></li>
                    <li><a href="#">teste</a></li>
                    <li><a href="#">teste</a></li>
                </ul>
            </div>
        </div>
        <!-- Grid dos Filmes -->
        <div class="col-md-10">
            <div class="p-3 rounded" style="background-color: #e0e0e0;">
                <div class="row">
                    @for (int i = 0; i < 6; i++)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm">
                                <img src="https://via.placeholder.com/"
                                     class="card-img-top"
                                     alt="Imagem do Filme"
                                     style="object-fit: cover; width: 100%; height: 300px; max-width: 100%; max-height: 300px;" />
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">Filme Aleatório</h5>
                                    <p class="card-text">Pequena descrição do filme...</p>
                                    <a href="#" class="btn btn-outline-primary mt-auto">Ver Detalhes</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- Paginação teste-->
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">...</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
