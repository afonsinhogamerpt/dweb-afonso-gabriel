@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Filmes em Destaque</h2>

    <!-- Botão para redirecionar para a pesquisa de Filmes -->
    <div class="text-center mb-5">
        <a class="btn btn-primary btn-lg" asp-controller="Home" asp-action="Pesquisar">
            Pesquisar Filmes
        </a>
    </div>

    <!-- Grid inicial para ver 9 filmes random futuramente -->
    <div class="row">
        @for (int i = 0; i < 9; i++)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="https://via.placeholder.com/"
                         class="card-img-top"
                         alt="Imagem do Filme"
                         style="object-fit: cover; width: 100%; height: 300px; max-width: 100%; max-height: 300px;"/>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">Filme Aleatório</h5>
                        <p class="card-text">Pequena descrição do filme...</p>
                        <a href="#" class="btn btn-outline-secondary mt-auto">Ver mais</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>