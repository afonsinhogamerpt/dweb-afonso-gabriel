@model IEnumerable<dweb.Models.Filme>
@using dweb.Data
@using Microsoft.IdentityModel.Tokens
@inject AppDbContext _context
@{
    ViewData["Title"] = "Home";
    var filmes = _context.Filme.Take(9).ToList();
    int filmesCount = filmes.Count;
    
}

<header>
   
    <style>
      
        #intro-example {
            height: 400px;
        }
        
        @@media (min-width: 992px) {
        #intro-example {
            height: 600px;
        }
        }
    </style>



    <div id="intro-example" class="p-0 text-center bg-image"
         style="background-image: url('images/theater.png'); background-repeat: no-repeat; background-size: cover; background-position: center; height: 70vh; position: relative; margin-top: 4rem; margin-bottom: 4rem; ">

      
        <div class="position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-center"
             style="background-color: rgba(0, 0, 0, 0.4);">

           
            <div class="text-white">
                <h1 class="mb-3">Filmly</h1>
                <h5 class="mb-4">Onde as histórias ganham vida!</h5>

                <a data-mdb-ripple-init class="btn btn-outline-light btn-lg m-2" href="#pesquisa"
                   role="button" rel="nofollow">Começa agora!</a>
            </div>
        </div>
    </div>
</header>



<div id="pesquisa" class="container" style="padding-top: 2rem;">
    <form asp-action="Pesquisar" asp-controller="Home" method="get" class="d-flex justify-content-center align-items-center mb-4">
        <div class="col-md-6 d-flex justify-content-center align-items-center">
            <input type="text" name="query" class="form-control me-2" placeholder="Search bar" />
            <button class="btn btn-primary" type="submit">Pesquisar</button>
        </div>
    </form>



        <div class="container-fluid" style="background-color: #e0e0e0; margin-bottom: 10vh">
            <div class="row justify-content-center" style="margin-bottom: 8vh">
                @for (int i = 0; i < 9; i++)
                {
                    if (i < filmesCount)
                    {
                        var filme = filmes[i];
                        <div class="card col-md-3 m-4">
                            <div class="bg-image hover-overlay" data-mdb-ripple-init data-mdb-ripple-color="light">
                                <img style="padding: 1rem; height: 28rem"  src="@(string.IsNullOrEmpty(filme.imagem) ? Url.Content("images/placeholder.svg") : filme.imagem)" class="img-fluid"/>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-truncate">@filme.nome (@filme.ano)</h5>
                                <p class="card-text text-truncate" >@filme.resumo</p>
                                <div class="d-flex justify-content-center align-items-center">
                                    <a asp-controller="Filme" asp-action="FilmeDetails" asp-route-id="@filme.filmeID" class="btn btn-primary" data-mdb-ripple-init>Ver mais</a>
                                </div>
                                
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card h-100 shadow-sm bg-light">
                                <div class="card-body d-flex flex-column justify-content-center align-items-center" style="height: 380px;">
                                    <span class="text-muted">(Vazio)</span>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
</div>