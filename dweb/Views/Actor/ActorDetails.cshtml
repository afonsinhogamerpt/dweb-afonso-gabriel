@model dweb.Models.Actor
@{
    ViewData["Title"] = "Detalhes do Actor";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.imagem" class="img-fluid rounded shadow" alt="Imagem do Director" />
        </div>
        <div class="col-md-8">
            <h2>@Model.nome</h2>
            <p><strong>Idade:</strong> @Model.idade</p>
            <p><strong>Biografia:</strong> @Model.bio</p>
            <a href="javascript:history.back()" class="btn btn-secondary mt-3">Voltar</a>
        </div>
    </div>
</div>