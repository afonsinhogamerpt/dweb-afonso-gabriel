@{
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Filmly</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/dweb.styles.css" asp-append-version="true"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #4a90e2;">
        <div class="container-fluid">
            <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="@Url.Content("~/images/filmly.png")" style="height: 5vh; width: 3vw" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                   
                </ul>
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div style="margin-right: 1vw;">
                    <a style="text-decoration: none; color: white;" asp-action="Logout" asp-controller="Auth">Logout</a>
                </div>  
            }
            
            <div class="d-flex align-items-center">
                @if (ViewData["UserImage"] != null)
                {
                    <a asp-controller="User" asp-action="Update">
                        <img src="@ViewData["UserImage"]"
                             class="rounded-circle shadow"
                             style="height: 40px; width: 40px; object-fit: cover;"
                             alt="User Image" />
                    </a>
                }
                else
                {
                    @if (ViewData["UserId"] != null)
                    {
                        <a asp-controller="User" asp-action="Update">
                            <img src="@Url.Content("~/images/placeholder_user.jpg")"
                                 class="rounded-circle shadow"
                                 style="height: 40px; width: 40px; object-fit: cover;"
                                 alt="Login" />
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login">
                            <img src="@Url.Content("~/images/placeholder_user.jpg")"
                                 class="rounded-circle shadow"
                                 style="height: 40px; width: 40px; object-fit: cover;"
                                 alt="Login" />
                        </a>
                    }
                    
                }
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer mt-5 py-3" style="background-color: #4a90e2;">
    <div class="container text-center text-white">
        &copy; 2025 - dweb - <a class="text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>