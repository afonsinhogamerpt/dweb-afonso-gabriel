@page
@model dweb.Models.DTOs.LoginDTO

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex flex-column justify-content-center align-items-center">
    <h1 class="fw-bold fs-2 text-dark mt-4">Login</h1>

    <div class="d-flex flex-column justify-content-center align-items-center bg-light w-50 mt-5 p-4 rounded shadow-sm">

        <form id="account" asp-action="Login" asp-controller="Auth" method="post" class="w-100">
            <h2 class="fs-5 fw-bold text-center text-dark mb-4">Introduz as tuas credenciais</h2>
            <hr />

            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder=""/>
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="RememberMe" />
                <label class="form-check-label" asp-for="RememberMe">
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>

            <div class="d-flex flex-column justify-content-center align-items-center">
                <button id="login-submit" type="submit" class="btn btn-primary fw-bold">Login</button>
            </div>

            <div class="mt-3 text-center">
                <p><a id="forgot-password" asp-page="./ForgotPassword">Esqueceste-te da tua password?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model">Ainda não tens conta? Regista-te!</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
